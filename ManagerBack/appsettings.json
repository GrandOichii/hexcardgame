{
  "UserValidation": {
    "Username": {
      "MinLength": 4,
      "MaxLength": 20
    },
    "Password": {
      "MinLength": 8,
      "MaxLength": 20
    }
  },

  "DeckRestrictions": {
    "MaxDeckCount": 20,
    "Name": {
      "MinLength": 3,
      "MaxLength": 20
    }
  },

  "MatchClearing": {
    "Timeout": 3000,
    "ClearCrashed": true,
    "Enabled": true
  },

  "Database": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "hex",
    "CardCollectionName": "cards",
    "UserCollectionName": "users",
    "DeckCollectionName": "decks",
    "MatchScriptsCollectionName": "matchScripts",
    "MatchConfigCollectionName": "configs"
  },
  "ConnectionStrings": {
    "Redis": "localhost:6379"
  },

  "AppSettings" : {
    "Token": "super secret token"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
